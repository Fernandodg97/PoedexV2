<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vBox0" alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mp3.dam.elpuig.pokedex.control.MainWindow">
    <children>
        <!-- Menu Bar -->
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="menuItemLoad" mnemonicParsing="false" onAction="#clickMenuItemLoad" text="Load/Update" />
                        <MenuItem fx:id="menuItemClose" mnemonicParsing="false" onAction="#clickMenuItemClose" text="Close" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>

        <!-- ComboBox for selecting Pokémon category -->
        <HBox fx:id="hBox0">
            <children>
                <Label text="Comarca">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </HBox.margin>
                </Label>
                <ComboBox fx:id="cmbComarca" prefWidth="150.0" onAction="#onPokemonSelected">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </HBox.margin>
                </ComboBox>
            </children>
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
        </HBox>

        <!-- Bar chart to show Pokémon types -->
        <VBox fx:id="vBoxChart" spacing="10.0" alignment="CENTER" />

        <!-- Pokémon details display -->
        <VBox fx:id="vBoxPokemonDetails" spacing="10.0" alignment="CENTER">
            <children>
                <Label fx:id="lblPokemonName" text="Pokémon Name: " />
                <Label fx:id="lblPokemonId" text="Pokémon ID: " />
                <ImageView fx:id="ivPokemonImage" fitWidth="200" fitHeight="200" />
            </children>
        </VBox>
    </children>
</VBox>
