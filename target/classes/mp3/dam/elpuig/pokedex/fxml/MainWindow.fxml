<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>

<?import java.net.URL?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="mp3.dam.elpuig.pokedex.control.MainWindow">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
    <left>
        <VBox spacing="15" padding="10">
            <TextField fx:id="searchField" promptText="Buscar PokÃ©mon" style="-fx-font-size: 14px; -fx-background-color: lightgray;" />
            <Button text="Buscar" onAction="#searchPokemon" style="-fx-font-size: 14px; -fx-background-color: lightblue;" />
            <ListView fx:id="pokemonList" style="-fx-font-size: 14px;" />
            <Button text="Cargar Todos" onAction="#loadAllPokemon" style="-fx-font-size: 14px; -fx-background-color: lightgreen;" />
            <Label fx:id="statusLabel" text="Cargando..." style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        </VBox>
    </left>

    <center>
        <TextArea fx:id="resultArea" editable="false" style="-fx-font-size: 14px; -fx-padding: 10px;" />
    </center>

    <bottom>
        <ImageView fx:id="imageView" fitWidth="150" preserveRatio="true" />
    </bottom>
</BorderPane>
